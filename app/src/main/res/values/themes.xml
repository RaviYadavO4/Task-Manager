<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TaskManager" parent="Base.Theme.TaskManager" />



    <!-- Search View Text  -->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="SearchTheme" parent="Theme.AppCompat.Light">
        <item name="queryHint">@string/search_task</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>

    </style>

    <style name="TodoCompletedCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ChipText" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/chip_text_color</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/datePickerAccent</item>
        <item name="android:textColor">@color/datePickerTextColor</item>
        <item name="android:colorControlActivated">@color/datePickerActivated</item>
        <item name="android:textColorSecondary">@color/datePickerTextSecondary</item>
        <item name="android:windowBackground">@color/datePickerWindowBackground</item>
        <item name="android:textColorPrimary">@color/datePickerTextPrimary</item>
    </style>
</resources>